@model CreateEquipmentViewModel
@{
    ViewData["Title"] = "添加共享设备";
}

<h1>添加共享设备</h1>
@await Component.InvokeAsync(nameof(MedicalEquipment_Sharing.ViewComponents.ShowGratuity))
<hr />

<div class="row" enctype="multipart/form-data">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>
                    <label asp-for="Name"></label>
                </h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="Describe"></label>
                </h5>
                <textarea placeholder="描述的越详细被借用/购买的概率越高哦" rows="4" asp-for="Describe" class="form-control"></textarea>
                <span asp-validation-for="Describe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="Price"></label>
                </h5>
                <input placeholder="租赁此设备的每天所需要的支付的费用" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="SoldPrice"></label>
                </h5>
                <input placeholder="购买此设备的所需要的支付的费用" asp-for="SoldPrice" class="form-control" />
                <span asp-validation-for="SoldPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="OriginalPrice"></label>
                </h5>
                <input placeholder="您购买此设备时的价格" asp-for="OriginalPrice" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="Manufacturer"></label>
                </h5>
                <select asp-items="Html.GetEnumSelectList(typeof(EquipmentManufacturer))"
                        asp-for="Manufacturer" class="form-control"></select>
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="Type"></label>
                </h5>
                <select asp-items="Html.GetEnumSelectList(typeof(EquipmentType))"
                        asp-for="Type" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>
                    <label asp-for="Image"></label>
                    <span style="margin-left:8px" class="badge badge-pill badge-success">图片不大于3MB</span>
                </h5>
                <input asp-for="Image" /><br />
                <span>上传设备的实物图片</span><br />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div style="margin-top:50px">
                <button type="submit" class="btn col-md-4 btn-primary">添加</button>
                <a asp-action="Index" style="margin-left:20px" class="btn col-md-4 btn-secondary">取消</a>
            </div>
        </form>
    </div>
</div>
